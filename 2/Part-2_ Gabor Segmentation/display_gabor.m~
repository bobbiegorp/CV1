number = 1;

%Theta 
%{
for theta_value = [0,2*pi/4,2*pi/3,2*pi/2,2*pi]
    myGabor = createGabor(3,theta_value,15,pi/2,0.4);
    myGabor_real = myGabor(:,:,1); 
    myGabor_imaginary = myGabor(:,:,2);
    
    subplot(2,5,number), imshow(myGabor_real,[]);
    title("Real - Theta =  " + num2str(theta_value) );
    subplot(2,5,number+5), imshow(myGabor_imaginary, []);
    title("Imaginary - Theta = " + num2str(theta_value));
    number = number +1;
end
%}

%sigma
for sigma_value = [0,pi/3,2*pi/4,2*pi/3,2*pi/2]
    myGabor = createGabor(3,pi/3,15,pi/2,0.4);
    myGabor_real = myGabor(:,:,1); 
    myGabor_imaginary = myGabor(:,:,2);
    
    subplot(2,5,number), imshow(myGabor_real,[]);
    title("Real - Theta =  " + num2str(sigma_value) );
    subplot(2,5,number+5), imshow(myGabor_imaginary, []);
    title("Imaginary - Theta = " + num2str(sigma_value));
    number = number +1;
end